#!/bin/bash

# trap ctrl-c and call ctrl_c()
trap ctrl_c INT
function ctrl_c() {
    ./scripts/killall_launcher.sh
    exit 1
}


kile &
f=$(grep -Elr 'documentclass' src/* | cut -d':' -f1)
f=${f##*/}
echo $f
f=${f%.*}
echo $f
echo 'okular ./build/'$f'.pdf & ./script/make_launcher.sh & wait'
sh -c 'okular ./build/'$f'.pdf & ./script/make_launcher.sh & wait'
